<h1>Books</h1>
<% @books.each do |book| %>
  <p>title</p>
  <span><%= book.title %></span>
  <p>body</p>
  <span><%= book.body %></span>
<% end %>





<h3>new books</h3>
<%= form_with model: @book, url:'/books',method: :post do |f| %>
  <h4>title</h4>
  <%= f.text_field :title %>
  <h4>book</h4>
  <%= f.text_area :body %>

  <%= f.submit '投稿' %>
<% end %>
